<%= form_for(@volunteer) do |f| %>
  



<div class="row">
    <div class="container-fluid">
      <div class="col-xs-6">
        <p class='text-muted'>
          Rellene los siguientes campos con la información pertinente:<br>
        </p>
      </div>
      <div class="col-xs-6">
        <p class='text-muted' style="color:#D46A6A;" align="right">
          <i><small>Los campos marcados con (*) son obligatorios.</small>
          <br><br></i>
        </p>
      </div>
    </div>
    </div>

    <div class="container">

<table width="1200">
<tr><td>
  

  <div class="field">
    <%= f.label :Nombre %>*<br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Apellidos %>*<br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :Area_para_apoyarnos %>*<br>
    <%= f.select :area, ['comunicación','eventos','informática','linguistica','otros']%>
  </div>


  <div class="field">
    <%= f.label :carrera %><br>
    <%= f.text_field :carreer %>
  </div>
 
  <div class="field">
    <%= f.label :celular %>*<br>
    <%= f.text_field :cellphone %>
  </div>
  <div class="field">
    <%= f.label :departmento %>*<br>
   <%= f.select :department, ['Pando','Beni','La Paz','Santa Cruz','Cochabamba','Oruro','Potosí','Chuquisaca','Tarija']%>
  </div>
  <div class="actions">
    <%= f.submit 'Enviar', :class => 'btn btn-sm btn-success'%>
  </div>
<% end %>
</td><td>
 <img class='img-rounded' src=<%=asset_path "voluntario.jpg" %> width='300px'>


</td></tr>
</table>
 </div>